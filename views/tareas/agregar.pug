doctype html
html
    head
        title Agregar Tarea
        link(rel="stylesheet", href="/styles.css")
    body
        h1 Nueva Tarea

        form(action="/tareas" method="POST")
            div
                label(for="titulo") Título:
                input(type="text" name="titulo" id="titulo" required)

            div 
                label(for="descripcion") Descripción:
                textarea(name="descripcion" id="descripcion" required)

            div 
                label(for="area") Área:
                input(type="text" name="area" id="area" required)

            div
                label(for="asignado") Asignado a:
                select(name="asignado" id="asignado")
                    option(value="") --Seleccionar persona--
                    each persona in personas
                        option(value=persona.id)= persona.nombre + ' ' + persona.apellido

            div
                label(for="prioridad") Prioridad:
                select(name="prioridad" id="prioridad" required)
                    option(value="") --Seleccionar prioridad--
                    option(value="alta") Alta
                    option(value="media") Media
                    option(value="baja") Baja

            div
                label(for="fechaInicio") Fecha de Inicio:
                input(type="date" name="fechaInicio" id="fechaInicio" required)

            div
                label(for="fechaVencimiento") Fecha de Vencimiento:
                input(type="date" name="fechaVencimiento" id="fechaVencimiento" required)

            div
                label(for="estado") Estado:
                select(name="estado" id="estado" required)
                    option(value="pendiente") Pendiente
                    option(value="en curso") En curso
                    option(value="completada") Completada
                    
            button(type="submit") Crear tarea
        
        a(href="/tareas") Volver al listado.