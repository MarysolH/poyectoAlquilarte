doctype html
html
  head
    title Panel de administración - Personas
    link(rel="stylesheet", href="/styles.css")

  body
    include header.pug
    
    h1 Panel de administración - Personas

    a.btn-agregar(href="/personas") + Agregar persona

    table
      thead
        tr
          th Nombre
          th Apellido
          th Email
          th Acciones
      tbody
        each persona in personas
          tr
            td #{persona.nombre}
            td #{persona.apellido}
            td #{persona.mail}
            td
              a(href=`/personas/${persona.id}`) Ver
              a(href=`/personas/${persona.id}/editar`) Editar
              a(href=`/personas/${persona.id}/eliminar`, class="btn-eliminar") Eliminar

    a.btn-agregar(href="/") Volver al inicio.          